---
layout: layouts/base.njk
---
<div class="section">
		<div class="section-header is-primary">
			<p class="title has-text-success">{{ title }}</p>
			<p class="subtitle"><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></p>
		</div>
	<div class="content">
		{{ content | safe }}
	</div>
	<footer class="card-footer">
		<label class="is-pulled-left">Tags:&nbsp;</label>
		{%- for tag in tags | filterTagList %}
		{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<a href="{{ tagUrl }}" class="chas-text-link">{{ tag }}</a>{%- if not loop.last %},&nbsp; {% endif %}
		{%- endfor %}
	</footer>
</div>
{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="tabs is-left">
	{%- if previousPost %}<li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
	{%- if nextPost %}<li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
