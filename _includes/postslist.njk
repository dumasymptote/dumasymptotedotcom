
{% for post in postslist | reverse %}
<article id="{{ post.data.title }}">
  <div class="grid grid-cols-6">
    <div class="col-span-1">
        <time class="text-blue-400" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("dd LLLL yyyy") }}</time>
    </div>
    <div class="col-span-4">
      <a class="text-2xl font-semibold text-blue-400 hover:text-lime-400" href="{{ post.url }}">{{ post.data.title }}</a>
    </div>
    <div class="col-span-6 col-start-1">
      {% if postslist.indexOf(post) == postslist.length-1 %}
        {{post.content | safe}}
      {% else %}
        {% if post.content.length > 200 %}
          {{ post.content.substring(0,200) | safe }}... <a class="is-link" href="{{ post.url }}"> continue</a>
        {% else %}
          {{ post.content | safe }}
        {% endif %}
      {% endif %}
    </div>
  </div>
</article>
{% endfor %}
