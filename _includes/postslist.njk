
{% for post in postslist | reverse %}
<section class="section">
	<div class="title">
		<a href="{{ post.url }}">{{ post.data.title }}</a>
	</div>
	<div class="subtitle">
		<time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
	</div>
	<div class="content">
		{%- if post.content.length > 100 %}{{ post.content.substring(0,100) | safe }}...{%- endif %}
		{%- if post.content.length <= 100 %}{{ post.content | safe }}{%- endif %}
	</div>
</section>
{% endfor %}
